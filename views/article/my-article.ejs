<!DOCTYPE html>
<html>
<head>
    <title>My articles</title>
    <!--<link rel="stylesheet" href="style.css">-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <h1 class="mb-4">My articles</h1>
        <a href="/user/my-account" class="btn btn-secondary">Back to my account</a>
        <a href="/article/new" class="btn btn-success">New article</a>

        <% userArticles.forEach( article => { %>

            <div class="card mt-4">

                <div class="card-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div>
                    <div class="card-text mb-2"><%= article.description %></div>
                    <a class="btn btn-primary" href="/article/<%= article.id %>" >Read more</a>
                    <a class="btn btn-primary" href="/article/edit/<%= article.id %>" >Edit</a>
                    <form class="d-inline" method="post" action="/article/<%= article.id %>?_method=DELETE" >
                        <button  type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </div>

            </div>

        <%})%>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>